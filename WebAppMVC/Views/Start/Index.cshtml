@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StartLayout.cshtml";
}

<div class="wrapper">
    <header class="header">
        <div class="container">
            <div class="header__inner">
                <div class="header__logo">СПОРТКОМПЛЕКС ОЛИМП</div>

                <nav class="nav">
                    <a class="nav__link" href="#">ИНФО</a>
                    @{
                        if (User.Identity.IsAuthenticated)
                            await Html.RenderPartialAsync("_User", User.Identity.Name);
                        else
                            await Html.RenderPartialAsync("_LogIn");
                    }
                </nav>
                
            </div>
        </div>
    </header>
</div>

