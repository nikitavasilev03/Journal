@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model WebAppMVC.ViewModel.LoginViewModel

<div class="wrapper">
    <div class="container">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <h1>ВХОД</h1>
            <div class="form-group">
                <a>ЛОГИН : <input type="text" id="login" asp-for="Login"></a>
                <span asp-validation-for="Login" />
            </div>
            <div class="form-group">
                <a>ПАРОЛЬ : <input id="password" asp-for="Password"></a>
                <span asp-validation-for="Password" />
            </div>
            <div class="form-group">
                <input type="submit" id="but" value="ВОЙТИ" />
            </div>  
        </form>
    </div>
</div>

