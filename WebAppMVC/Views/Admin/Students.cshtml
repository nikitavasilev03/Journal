@{
    Layout = "~/Views/Home/Index.cshtml";
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<DomainCore.Models.Student>

<div class="tools">
    <h1>АККАУНТЫ</h1>
    <a class="nav__link butt" asp-controller="Admin" asp-action="CreateStudent">Добавить нового студента</a>
</div>

<table class="table-info">
    <thead>
        <tr>
            <td>ID</td>
            <td>Фамилия</td>
            <td>Имя</td>
            <td>Отчество</td>
            <td>Группа</td>
            <td>Управление</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AccountId</td>
                <td>@item.StudentSname</td>
                <td>@item.StudentName</td>
                <td>@item.StudentLname</td>
                <td>@item.StudentGroup</td>
                <td>
                    <a class="nav__link" asp-controller="Admin" asp-action="EditStudent" asp-route-id="@item.AccountId">Изменить</a>/
                    <a class="nav__link" asp-controller="Admin" asp-action="RemoveStudent" asp-route-id="@item.AccountId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>