@{
    Layout = "~/Views/Home/Index.cshtml";
    ViewData["Title"] = "Home Page";
}
@model WebAppMVC.ViewModel.RecordViewModel

<a class="nav_link" asp-action="StudentSubjects" asp-controller="Admin"
   asp-route-stud="@Model.Student.AccountId">Назад</a>
<h1 class="h-title h1-title">Изменение записи студента на дисциплину</h1>
<h2 class="h2-title h-title">@Model.Student.StudentSname @Model.Student.StudentName @Model.Student.StudentLname @Model.Student.StudentGroup</h2>

<form asp-action="EditRecord" asp-controller="Admin" asp-route-id="@Model.Id">

    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div class="ca_">
        <label asp-for="DateEnd">Дата окончания:</label>
        <div id="block-hidden-date">
            <input type="date" asp-for="DateEnd" asp-format="{0:yyyy-MM-dd}">
        </div>
        <span asp-validation-for="DateEnd"></span>
    </div>

    <div class="ca_">
        <input class="ca_input" type="submit" value="Записать" />
    </div>

</form>