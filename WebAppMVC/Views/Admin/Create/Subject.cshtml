@{
    Layout = "~/Views/Home/Index.cshtml";
    ViewData["Title"] = "Home Page";
}
@model WebAppMVC.ViewModel.SubjectViewModel

<h1 class="h-title h1-title">Добавление дисциплины</h1>

<form asp-action="CreateSubject" asp-controller="Admin">

    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="ca_">
        <label class="ca_lab" asp-for="Name">Название:</label>
        <input class="ca_input" type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="ca_">
        <label class="ca_lab" asp-for="NeedVisits">Необходимое количество посещений:</label>
        <input class="ca_input" type="number" asp-for="NeedVisits" min="1" max="50" />
        <span asp-validation-for="NeedVisits"></span>
    </div>
    <div class="ca_">
        <input class="ca_input" type="submit" value="Добавить" />
    </div>
</form>