@{
    Layout = "~/Views/Home/Index.cshtml";
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<DomainCore.Models.Account>

<div class="tools">
    <h1 class="h-title h1-title">Аккаунты</h1>
    <a class="nav_link butt" asp-controller="Admin" asp-action="CreateAccount">Создать аккаунт</a>
</div>

<table class="table-info">
    <thead>
        <tr>
            <td>ID</td>
            <td>Логин</td>
            <td>Дата создания</td>
            <td>Дата окончания</td>
            <td>Тип учетной записи</td>
            <td>Управление</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AccountId</td>
                <td>@item.LoginName</td>
                <td>@item.DateCreate.ToString("dd.MM.yyyy")</td>
                <td>@item.DateEnd?.ToString("dd.MM.yyyy")</td>
                <td>@item.AccountType</td>
                <td>
                    <a class="nav__link" asp-controller="Admin" asp-action="EditAccount" asp-route-id="@item.AccountId">Изменить</a>/
                    <a class="nav__link" asp-controller="Admin" asp-action="DialogRemoveAccount" asp-route-id="@item.AccountId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>