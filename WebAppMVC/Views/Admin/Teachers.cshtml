@{
    Layout = "~/Views/Home/Index.cshtml";
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<DomainCore.Models.Teacher>

<div class="tools">
    <h1 class="h-title h1-title">Преподаватели</h1>
    <a class="nav_link butt" asp-controller="Admin" asp-action="CreateTeacher">Добавить нового преподавателя</a>
</div>

<table class="table-info">
    <thead>
        <tr>
            <td>ID</td>
            <td>Фамилия</td>
            <td>Имя</td>
            <td>Отчество</td>
            <td>Управление</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AccountId</td>
                <td>@item.TeacherSname</td>
                <td>@item.TeacherName</td>
                <td>@item.TeacherLname</td>
                <td>
                    <a class="nav__link" asp-controller="Admin" asp-action="Timetable" asp-route-teach="@item.AccountId">Занятия</a>/
                    <a class="nav__link" asp-controller="Admin" asp-action="EditTeacher" asp-route-id="@item.AccountId">Изменить</a>/
                    <a class="nav__link" asp-controller="Admin" asp-action="RemoveTeacher" asp-route-id="@item.AccountId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>